<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="任务名称" />

        <!-- 原来我给了 tvTaskSub，这里保留，并新增适配器需要的 tvTaskInfo -->
        <TextView
            android:id="@+id/tvTaskSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="共 0 项资产" />

        <!-- 适配器里引用的 tvTaskInfo（新增） -->
        <TextView
            android:id="@+id/tvTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="计划时间 / 创建人 等信息"
            android:textColor="#6B7280"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_menu_view"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="打开" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_menu_save"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="导出" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteTask"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="删除" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
