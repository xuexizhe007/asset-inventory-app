<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 主色（绿色） -->
    <color name="color_primary">#2E7D32</color>
    <color name="color_primary_dark">#1B5E20</color>
    <color name="color_primary_light">#E8F5E9</color>

    <!-- 兼容原主题字段 -->
    <color name="colorPrimary">@color/color_primary</color>
    <color name="colorPrimaryDark">@color/color_primary_dark</color>

    <!-- 次主题色（蓝色系，用于强调 / Accent） -->
    <color name="color_secondary">#0288D1</color>
    <color name="color_secondary_dark">#01579B</color>

    <!-- 兼容原来的 colorAccent，直接用次主题色 -->
    <color name="colorAccent">@color/color_secondary</color>

    <!-- 常用文本颜色 -->
    <color name="color_primary_text">#212121</color>
    <color name="color_secondary_text">#666666</color>

    <!-- 白色 / 背景色（补上 @color/white） -->
    <color name="white">#FFFFFF</color>
    <color name="color_background">#FFFFFF</color>

    <!-- 盘点状态颜色（Legend + 左侧色条 + 状态标签） -->
    <!-- 未盘点：灰色 -->
    <color name="status_unchecked">#BDBDBD</color>

    <!-- 相符：绿色 -->
    <color name="status_matched">#43A047</color>

    <!-- 不相符：红色 -->
    <color name="status_mismatch">#E53935</color>

    <!-- 补打标签：橙色 -->
    <color name="status_reprint">#FB8C00</color>

</resources>
