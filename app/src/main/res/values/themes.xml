<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AssetInventory" parent="Theme.MaterialComponents.DayNight.Light.NoActionBar">
        <item name="colorPrimary">@color/mint_primary</item>
        <item name="colorPrimaryVariant">@color/mint_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/mint_accent</item>
        <item name="colorSecondaryVariant">@color/mint_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/mint_primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- 统一按钮高度 & 圆角 -->
    <style name="Widget.AssetInventory.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="cornerRadius">24dp</item>
    </style>
</resources>
